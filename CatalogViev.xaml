<Window x:Class="WpfShop.CatalogViev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог запчастей" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CategoryListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF9800"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProductListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                    <Setter Property="BorderBrush" Value="#FF9800"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0B2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="ProductItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding title}" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,4"/>
                <TextBlock Text="{Binding price, StringFormat='Цена: {0} ₽'}" Foreground="#FF9800" FontWeight="Bold"/>
                <TextBlock Text="{Binding stock, StringFormat='В наличии: {0} шт.'}" FontSize="11" Foreground="Gray"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#FF9800" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Каталог запчастей" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="20,10"/>
                <Button Grid.Column="1" Content="Выйти" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1" Padding="10,5" Cursor="Hand" Margin="0,0,20,0" Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Категории" FontSize="16" FontWeight="Bold" Margin="10,10,10,5"/>
                    <ListBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" ItemContainerStyle="{StaticResource CategoryListBoxItemStyle}" BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Товары" FontSize="16" FontWeight="Bold" Margin="10,10,10,5" Grid.Row="0"/>
                    <TextBlock Text="{Binding SelectedCategory, StringFormat='Категория: {0}'}" FontSize="12" Foreground="Gray" Margin="10,0,10,5" Grid.Row="1"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5,10,10" VerticalAlignment="Center">
                        <TextBlock Text="Поиск:" FontSize="12" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="SearchTextBox" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Width="150" Height="25" Padding="5,2" FontSize="12" BorderBrush="#E0E0E0" BorderThickness="1" Background="White"/>
                        <Button Content="✕" Width="25" Height="25" Margin="5,0,0,0" Background="Transparent" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="10" Command="{Binding ClearSearchCommand}"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding FilteredProducts}" SelectedItem="{Binding SelectedProduct}" ItemContainerStyle="{StaticResource ProductListBoxItemStyle}" ItemTemplate="{StaticResource ProductItemTemplate}" BorderThickness="0" Grid.Row="3" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Content="➕ Добавить новый товар" Grid.Column="0" Command="{Binding AddNewProductCommand}" Background="Transparent" Foreground="#FF9800" FontWeight="SemiBold" HorizontalAlignment="Stretch" Margin="0,10,0,0" Height="35" FontSize="14" BorderThickness="1" BorderBrush="#FF9800" Cursor="Hand"/>
                            <Button Content="🗑️ Удалить товар" Grid.Column="1" Command="{Binding DeleteProductCommand}" Background="Transparent" Foreground="Red" FontWeight="SemiBold" HorizontalAlignment="Stretch" Margin="0,10,0,0" Height="35" FontSize="12" BorderThickness="1" BorderBrush="Red" Cursor="Hand"/>
                        </Grid>

                        <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="#F8F8F8" Height="200" Margin="0,0,0,15">
                            <Grid>
                                <Image x:Name="ProductImage" Source="{Binding CurrentProductImage}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="180" MaxHeight="180"/>
                                <!--<TextBlock Text="Нет изображения" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>-->
                                <Button Content="◀" Command="{Binding PreviousImageCommand}" Width="30" Height="30" Background="#FF9800" Foreground="White" BorderThickness="0" FontSize="10" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Cursor="Hand"/>
                                <Button Content="▶" Command="{Binding NextImageCommand}" Width="30" Height="30" Background="#FF9800" Foreground="White" BorderThickness="0" FontSize="10" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Cursor="Hand"/>
                                <TextBlock Text="{Binding ImageCounter}" Background="#CC000000" Foreground="White" FontSize="10" Padding="5,2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="Ссылки на изображения:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProductImageUrls, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" AcceptsReturn="True" MinHeight="40" ToolTip="Ссылки на изображения через запятую. Изменения сохраняются автоматически." FontSize="11" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5"/>

                        <TextBlock Text="Название:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProduct.title, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Text="Теги:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProductTags, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="13" Margin="0,0,0,10" ToolTip="Теги через запятую"/>

                        <TextBlock Text="Описание:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProduct.description, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,15" AcceptsReturn="True" MinHeight="60"/>

                        <TextBlock Text="Количество на складе:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProduct.stock, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="0,0,0,10" Width="80"/>

                        <TextBlock Text="Цена:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProduct.price, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#FF9800" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,15" Width="120"/>

                        <TextBlock Text="Категории:" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedProductCategories, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="#333333" BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" FontSize="13" Margin="0,0,0,15" AcceptsReturn="True" MinHeight="40" ToolTip="Категории через запятую"/>

                        <Button Content="Сохранить изменения" Command="{Binding SaveProductCommand}" Background="#FF9800" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Stretch" Margin="0,10,0,0" Height="35" FontSize="14" BorderThickness="0" Cursor="Hand"/>
                        <TextBlock Text="{Binding SaveStatus}" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{Binding SaveStatusColor}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>